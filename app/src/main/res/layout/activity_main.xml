<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="28dp"
    tools:layout_editor_absoluteY="28dp">

    <TextView
        android:id="@+id/ed1"
        android:layout_width="394dp"
        android:layout_height="186dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Enter" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_marginTop="65dp"
        android:background="@color/black"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_marginTop="65dp"
        android:background="@color/black"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/ed1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_marginTop="65dp"
        android:background="@color/black"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btnadd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/ed1" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_marginTop="65dp"
        android:background="@color/black"
        android:insetTop="0dp"
        android:insetBottom="3dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/ed1"/>


    <Button
        android:id="@+id/btn4"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="6"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btnsubstract"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btnsubstract"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:insetBottom="5dp"
        android:text="-"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnadd" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="7"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="8"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="9"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btnmultiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btnmultiply"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="*"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnsubstract" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnbackspace"
        app:layout_constraintEnd_toStartOf="@+id/btndot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:text="."
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/btnbackspace"
        app:layout_constraintEnd_toStartOf="@+id/btnAC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:text="AC"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnequal"
        app:layout_constraintEnd_toStartOf="@+id/btndivide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btndot"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:text="/"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnequal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAC"
        app:layout_constraintTop_toBottomOf="@+id/btnmultiply" />

    <Button
        android:id="@+id/btnbackspace"
        android:layout_width="176dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:backgroundTint="#5E5D5D"
        android:insetLeft="55dp"
        android:insetTop="10dp"
        android:insetRight="50dp"
        android:insetBottom="10dp"
        android:textSize="50dp"
        app:icon="@android:drawable/ic_input_delete"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnequal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn0" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="176dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:backgroundTint="#5E5D5D"
        android:insetLeft="50dp"
        android:insetTop="10dp"
        android:insetRight="50dp"
        android:insetBottom="10dp"
        android:text="="
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnbackspace"
        app:layout_constraintTop_toBottomOf="@+id/btnAC"
        tools:text="=" />

</androidx.constraintlayout.widget.ConstraintLayout>